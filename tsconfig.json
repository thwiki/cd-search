{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"lib": ["dom", "es2020"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2017",
		"noUnusedLocals": true,
		"jsx": "react",
		"jsxFactory": "h",
		"paths": {
			"@utils/*": ["./src/utils/*"],
			"@apis/*": ["./src/apis/*"],
			"@locale": ["./src/locale/index.ts"],
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "stencil.config.ts"]
}
